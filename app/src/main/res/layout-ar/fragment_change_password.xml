<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9E8"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/linear_shape3"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@mipmap/backarrow"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/change_password"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="22sp"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@mipmap/notifipop"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="20dp"
        >

        <EditText
            android:id="@+id/old_password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_field"
            android:paddingVertical="10dp"
            android:paddingEnd="30dp"
            android:paddingStart="20dp"
            android:hint="@string/old_password"
            android:inputType="textPassword"
            android:gravity="right"
            />

        <ImageView
            android:id="@+id/show_old_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/eye"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="20dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        >

        <EditText
            android:id="@+id/new_password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_field"
            android:paddingVertical="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:hint="@string/new_passsword"
            android:inputType="textPassword"
            android:gravity="right"
            />

        <ImageView
            android:id="@+id/show_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/eye"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="20dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="20dp"
        >

        <EditText
            android:id="@+id/confirm_new_password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_field"
            android:paddingVertical="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:gravity="right"
            />

        <ImageView
            android:id="@+id/show_confirm_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/eye"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="20dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/save_changes_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:elevation="6dp"
        android:background="@drawable/un_selected_button"
        android:backgroundTint="@color/gray"
        android:text="@string/save_changes"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        />

</LinearLayout>